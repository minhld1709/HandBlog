<!-- Nav Bar -->
<nav>
  <!-- Brand -->
  <a href="/">
    <h2 class="brand">
      <img src="http://s.pictub.club/2016/09/16/mrMvH.jpg">
      <span>Mteo<i class="font-mini">Private</i></span>
    </h2>
  </a>
  <div class="nav-container">
    <%= select("project", "category_id", Category.all.collect{|p| [p.name, p.id]}, {prompt: "All Type"}, class: "metro-nav") %>
    <button id="myBtn">+</button>
  </div>
</nav>

<div class="container">
  <ul class="projects">
    <% @projects.each do |f| %>
      <li class="project">
        <div class="project-image" style="background: url('<%= f.layout_img %>');">
          <a href="#">
            <div class="course-mark"><b><%= f.category.short_name %></b></div>
          </a>
          <div class="description">
            <p><%= f.description %></p>
            <a href="<%= f.link %>" target="_blank">View Project</a>
          </div>
        </div>
        <h2 class="project-name">
          <span class="name"><%= f.name %></span>
          <a href="#" class="fa fa-comment-o comment"> <%= f.comment.count %></a>
          <a href="#" class="fa fa-star favories"> <%= get_count_favories(f) %></a>
          <a class="user" href="#">by <%= f.user.name %></a>
        </h2>
      </li>
    <% end %>
  </ul>
</div>

<%= render "projects/add_modal" %>
